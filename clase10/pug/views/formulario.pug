extends layout 

block formulario
    <header>
        <nav style="border-radius: 16px !important; margin: 10px 0 0 0" class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand disabled" href="#">Navbar</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        <a class="nav-link active" aria-current="page" href="/">Formulario</a>
                        <a class="nav-link" href="/productos">Lista</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main style="display: flex; justify-content: center; align-items: center;">
        <div class="col-lg-6" style="border: 1px solid black; border-radius: 16px; margin: 20px;"> 
            <form action='/productos' method="post" style="margin: 20px; display: flex; flex-wrap: wrap; justify-content: center; align-items: center;">

                <legend style="text-align: center;"><h2>Agregar Producto</h2></legend>

                <label for="exampleFormControlInput1" class="form-label">Nombre:</label>
                <input type="text" name="name" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">

                <label style="margin-top: 10px;" for="exampleFormControlInput1" class="form-label">Precio:</label>
                <input type="number" name="precio" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">

                <label style="margin-top: 10px;" for="exampleFormControlInput1" class="form-label">Url imagen:</label>
                <input type="text" name="urlImg" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">

                <button type="submit" style="margin-top: 10px;" class="btn btn-primary">Enviar</button>
            </form>
        </div>
    </main>